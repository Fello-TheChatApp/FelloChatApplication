<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.shreya.chatapplication.LoginPageZero">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#711961"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="354dp"
        android:layout_marginBottom="29dp"
        android:id="@+id/cardView2"
        android:layout_above="@+id/cardView"
        android:layout_alignLeft="@+id/cardView"
        android:layout_alignStart="@+id/cardView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_login1"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#711961"
                android:text="@string/login"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#fff" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="436dp"
        android:layout_marginBottom="75dp"
        android:id="@+id/cardView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_signup1"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#fff"
                android:text="@string/signup"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#147793" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="115dp"
        android:layout_height="137dp"
        android:layout_above="@+id/cardView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="137dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginBottom="141dp"
        app:srcCompat="@drawable/fellologo"
        android:contentDescription="@string/todo"
        android:autofillHints="fellologo" tools:targetApi="o"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="191dp"
        android:text="@string/fello"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="#711961"
        android:fontFamily="@font/nothing_you_could_do"
        android:textStyle="bold"/>
</RelativeLayout>
